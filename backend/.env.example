# Backend Environment Variables
# Copy this file to .env for local development

# Port for the backend server
# Local development: 8000
# Cloud Run: Automatically set by Cloud Run (usually 8080)
PORT=8000

# API Settings
API_HOST=0.0.0.0

# CORS Settings
# In production, specify exact frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================
# AQICN (World Air Quality Index) API
# ============================================================
# Get your free API token from: https://aqicn.org/data-platform/token/
# Quota: 1000 requests/second (very generous!)
AQICN_API_TOKEN=0b34379305dc8fb3181e19823ce6f16dedec4d2c

# Logging
LOG_LEVEL=INFO
