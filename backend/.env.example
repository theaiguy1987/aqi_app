# Backend Environment Variables
# Copy this file to .env for local development

# Port for the backend server
# Local development: 8000
# Cloud Run: Automatically set by Cloud Run (usually 8080)
PORT=8000

# API Settings
API_HOST=0.0.0.0

# CORS Settings
# In production, specify exact frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Future: Air Quality Data API Integration
# Uncomment and add your API keys when integrating real data sources
# OPENWEATHER_API_KEY=your_api_key_here
# IQAIR_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
